            <string>///Activate the coins

//If the ring has not been activated.
if (!ready) {

    if ((other.xspeed &gt; 0) &amp;&amp; (other.x &gt; x)) 
    || ((other.xspeed &lt; 0) &amp;&amp; (other.x &lt; x)) {

        //Play 'Ring' and 'Timer' sound
        audio_play_sound(snd_ring, 0, false);
        audio_play_sound(snd_timer, 0, true);
        
        //Get 1000 points
        with (instance_create(x-8,y,obj_score)) event_user(5);
    
        //Create the coins
        for (i=0; i&lt;array_length_1d(coin_x); i++;) {
        
            coin[i] = instance_create(coin_x[i],coin_y[i],obj_coin_r);
        }
        
        //Activate
        ready = 1;
        
        //Countdown
        alarm[0] = 720;
        
        //Destroy all not collected coins
        alarm[1] = 900;
        
        //Change the sprite
        sprite_index = spr_redring_active;
        image_index = 0;
        
        //Prevent the coins from re-appearing
        ds_map_add(global.redrings,id,1);
    }
}
